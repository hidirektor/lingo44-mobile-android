<resources>
    <!-- Base application theme. -->
    <style name="Theme.Lingify" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:icon">@mipmap/ic_launcher</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Shape appearance for rounded corners -->
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>

        <!-- Theme Based Images -->
        <item name="lingifyLogo">@drawable/logo_lingo_light</item>

        <item name="lingifyOnboardImage">@drawable/image_welcome_white</item>
        <item name="lingifyThemeChangerImage">@drawable/icon_moon</item>
        <item name="lingifyBackIcon">@drawable/icon_back_light</item>
        <item name="lingifyNextIcon">@drawable/icon_next_light</item>
        <item name="lingifyUpIcon">@drawable/icon_up_light</item>
        <item name="lingifyDownIcon">@drawable/icon_down_light</item>
        <item name="lingifyShortBackIcon">@drawable/icon_short_back_light</item>
        <item name="lingifyShortNextIcon">@drawable/icon_short_next_light</item>
        <item name="lingifyShortUpIcon">@drawable/icon_short_up_light</item>
        <item name="lingifyShortDownIcon">@drawable/icon_short_down_light</item>
        <item name="lingifyGoogleIcon">@drawable/icon_google_light</item>
        <item name="lingifyAppleIcon">@drawable/icon_apple_light</item>
        <item name="lingifyShowPasswordIcon">@drawable/icon_show_password_light</item>
        <item name="lingifyHidePasswordIcon">@drawable/icon_hide_password_light</item>
        <item name="lingifyCloseIcon">@drawable/icon_close_light</item>
        <item name="lingifyFlagIcon">@drawable/icon_flag_light</item>
        <item name="lingifyBookIcon">@drawable/icon_book_light</item>
        <item name="lingifyStudyIcon">@drawable/icon_study_light</item>
        <item name="lingifyWorkIcon">@drawable/icon_work_light</item>
        <item name="lingifyWorldIcon">@drawable/icon_world_light</item>
        <item name="lingifySkillIcon">@drawable/icon_flame_light</item>
        <item name="lingifyPeopleIcon">@drawable/icon_people_light</item>
        <item name="lingifyDetectLevelImage">@drawable/image_detect_level_light</item>
        <item name="lingifyDividerIcon">@drawable/icon_divider_light</item>
        <item name="lingifyQuizDashboardImage">@drawable/image_quiz_light</item>
        <item name="lingifyDashboardBottomBarDashboardIcon">@drawable/icon_home_light</item>
        <item name="lingifyDashboardBottomBarPodcastIcon">@drawable/icon_podcast_light</item>
        <item name="lingifyDashboardBottomBarDictionaryIcon">@drawable/icon_dictionary_light</item>
        <item name="lingifyDashboardBottomBarPracticesIcon">@drawable/icon_practices_light</item>
        <item name="lingifyDashboardBottomBarStatsIcon">@drawable/icon_stat_light</item>
        <item name="lingifyNotificationIcon">@drawable/icon_notification_light</item>
        <item name="lingifyErrorIcon">@drawable/icon_error_light</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.Lingify">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>