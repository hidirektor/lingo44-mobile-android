<resources>
    <!-- Base application theme. -->
    <style name="Theme.Lingify" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:icon">@mipmap/ic_launcher</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Shape appearance for rounded corners -->
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>

        <!-- Light Mode colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/body_on_primary</item>
        <item name="colorSurface">@color/body_surfaces_first</item>
        <item name="colorSecondary">@color/body_secondary</item>
        <item name="colorOnSurface">@color/body_on_primary</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/body_on_primary</item>

        <item name="lingifyLogo">@drawable/logo_kusadasi_dil_dark</item>
        <!-- <item name="lingifyLogo">@drawable/logo_dinamik_beyin_dark</item> -->
        <item name="lingifyOnboardImage">@drawable/image_welcome_dark</item>
        <item name="lingifyThemeChangerImage">@drawable/icon_sun</item>
        <item name="lingifyBackIcon">@drawable/icon_back_dark</item>
        <item name="lingifyNextIcon">@drawable/icon_next_dark</item>
        <item name="lingifyGoogleIcon">@drawable/icon_google_dark</item>
        <item name="lingifyAppleIcon">@drawable/icon_apple_dark</item>
        <item name="lingifyShowPasswordIcon">@drawable/icon_show_password_dark</item>
        <item name="lingifyHidePasswordIcon">@drawable/icon_hide_password_dark</item>
        <item name="lingifyCloseIcon">@drawable/icon_close_dark</item>
        <item name="lingifyFlagIcon">@drawable/icon_flag_dark</item>
        <item name="lingifyBookIcon">@drawable/icon_book_dark</item>
        <item name="lingifyStudyIcon">@drawable/icon_study_dark</item>
        <item name="lingifyWorkIcon">@drawable/icon_work_dark</item>
        <item name="lingifyWorldIcon">@drawable/icon_world_dark</item>
        <item name="lingifySkillIcon">@drawable/icon_flame_dark</item>
        <item name="lingifyPeopleIcon">@drawable/icon_people_dark</item>
        <item name="lingifyDetectLevelImage">@drawable/image_detect_level_dark</item>
        <item name="lingifyDividerIcon">@drawable/icon_divider_dark</item>
        <item name="lingifyQuizDashboardImage">@drawable/image_quiz_dark</item>
        <item name="lingifyDashboardBottomBarDashboardIcon">@drawable/icon_home_dark</item>
        <item name="lingifyDashboardBottomBarPodcastIcon">@drawable/icon_podcast_dark</item>
        <item name="lingifyDashboardBottomBarDictionaryIcon">@drawable/icon_dictionary_dark</item>
        <item name="lingifyDashboardBottomBarPracticesIcon">@drawable/icon_practices_dark</item>
        <item name="lingifyDashboardBottomBarStatsIcon">@drawable/icon_stat_dark</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.Lingify">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>